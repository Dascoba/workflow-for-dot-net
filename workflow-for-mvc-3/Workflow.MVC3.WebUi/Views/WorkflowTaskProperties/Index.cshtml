@using Workflow.MVC3.WebUi.Helpers
@model IList<Control>
@{
    Layout = "";
}
<html>
    <head>
        <title>
            Task Properties
        </title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/taskproperties.js")" type="text/javascript"></script>

        <style type="text/css">
            
            span { display: block; margin-bottom: 5px; color: Black; margin-top: 8px; }
            input { margin-bottom: 15px; }
            input.workflowTextBox { width: 200px; } 
            .submit { margin-top: 15px; }
            .workflowTextArea { width: 200px; height: 100px; }
            h2 { margin-bottom: 15px; }
        </style>
    </head>
    <body>
        <h2>Task Properties</h2>
        <script type="text/javascript">
             
             var wf = {};
             wf.TaskId = '@ViewBag.Id';
             wf.taskProps = @Html.Raw(ViewBag.PropertiesJson) ;
             
        </script>

        <form action="/WorkflowTaskProperties/Index/@ViewBag.Id" method="get">
            
            <input type="hidden" name="AssemblyQualifiedTypeName" id="AssemblyQualifiedTypeName" value="@ViewBag.TaskType" />
            <input type="hidden" name="id" id="id" value="@ViewBag.Id" />
            @foreach(var control in @Model)
            {
                
                    @Html.Raw(Html.RenderControl(control))
                
            }
            <span>
            
            <input type="submit" name="submit" value="Save properties" />
            </span>
        </form>
        
        
    </body>
</html>
